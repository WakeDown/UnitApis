@using Stuff.Objects
@model Stuff.Models.Organization
@{
    ViewBag.Title = "Редактирование юр. лица";
    Layout = "~/Views/Shared/_Editor.cshtml";
}

@section PanelHead
{
    Редактирование юридического лица
}

@section PanelBody
{
    @using (Html.BeginForm("Edit", "Organization", FormMethod.Post, new { @id = "orgForm", @class = "form-horizontal", enctype = "multipart/form-data", data_toggle = "validator", role = "form" }))
    {
        @*@Html.HiddenFor(m=>m.Id)*@
        <div class="form-group">
            <label class="col-lg-2 control-label" for="name">Название</label>
            <div class="col-lg-5">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control required-mark", @id = "name", required = "required", data_error = "Заполните Название" })
                <span class="help-block with-errors"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-2 control-label" for="Manager">Руководитель</label>
            <div class="col-lg-5">
                @Html.DropDownListFor(m => m.Director.Id, DbList.GetEmployeeList(), "--выберите руководителя--", new { @class = "form-control required-mark", @id = "Manager", required = "required", data_error = "Выберите Руководителя" })
                <span class="help-block with-errors"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-2 control-label" for="addressUr">Юридический адрес</label>
            <div class="col-lg-5">
                @Html.TextBoxFor(m => m.AddressUr, new { @class = "form-control", @id = "addressUr", })
                <span class="help-block with-errors"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-2 control-label" for="addressFact">Фактический адрес</label>
            <div class="col-lg-5">
                @Html.TextBoxFor(m => m.AddressFact, new { @class = "form-control", @id = "addressFact" })
                <span class="help-block with-errors"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-2 control-label" for="Phone">Телефон</label>
            <div class="col-lg-5">
                @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", @id = "Phone" })
                <span class="help-block with-errors"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-2 control-label" for="Email">e-mail</label>
            <div class="col-lg-5">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @id = "Email" })
                <span class="help-block with-errors"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-2 control-label" for="Site">Сайт</label>
            <div class="col-lg-5">
                @Html.TextBoxFor(m => m.Site, new { @class = "form-control", @id = "Site" })
                <span class="help-block with-errors"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-2 control-label" for="Inn">ИНН</label>
            <div class="col-lg-5">
                @Html.TextBoxFor(m => m.Inn, new { @class = "form-control", @id = "Inn" })
                <span class="help-block with-errors"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-2 control-label" for="Kpp">КПП</label>
            <div class="col-lg-5">
                @Html.TextBoxFor(m => m.Kpp, new { @class = "form-control", @id = "Kpp" })
                <span class="help-block with-errors"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-2 control-label" for="Ogrn">ОГРН</label>
            <div class="col-lg-5">
                @Html.TextBoxFor(m => m.Ogrn, new { @class = "form-control", @id = "Ogrn" })
                <span class="help-block with-errors"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-2 control-label" for="Rs">Р/С</label>
            <div class="col-lg-5">
                @Html.TextBoxFor(m => m.Rs, new { @class = "form-control", @id = "Rs" })
                <span class="help-block with-errors"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-2 control-label" for="Bank">Наименование банка</label>
            <div class="col-lg-5">
                @Html.TextBoxFor(m => m.Bank, new { @class = "form-control", @id = "Bank" })
                <span class="help-block with-errors"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-2 control-label" for="Ks">К/С</label>
            <div class="col-lg-5">
                @Html.TextBoxFor(m => m.Ks, new { @class = "form-control", @id = "Ks" })
                <span class="help-block with-errors"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-2 control-label" for="Bik">БИК</label>
            <div class="col-lg-5">
                @Html.TextBoxFor(m => m.Bik, new { @class = "form-control", @id = "Bik" })
                <span class="help-block with-errors"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-2 control-label" for="Okpo">ОКПО</label>
            <div class="col-lg-5">
                @Html.TextBoxFor(m => m.Okpo, new { @class = "form-control", @id = "Okpo" })
                <span class="help-block with-errors"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-2 control-label" for="Okved">ОКВЭД</label>
            <div class="col-lg-5">
                @Html.TextBoxFor(m => m.Okved, new { @class = "form-control", @id = "Okved" })
                <span class="help-block with-errors"></span>
            </div>
        </div>
        
        @*<div class="form-group">
            <label class="col-lg-2 control-label" for="ManagerName">ФИО руководителя</label>
            <div class="col-lg-5">
                @Html.TextBoxFor(m => m.ManagerName, new { @class = "form-control", @id = "ManagerName" })
                <span class="help-block with-errors"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-2 control-label" for="ManagerNameDat">ФИО руководителя (дательный падеж)</label>
            <div class="col-lg-5">
                @Html.TextBoxFor(m => m.ManagerNameDat, new { @class = "form-control", @id = "ManagerNameDat" })
                <span class="help-block with-errors"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-2 control-label" for="ManagerPosition">Должность руководителя</label>
            <div class="col-lg-5">
                @Html.TextBoxFor(m => m.ManagerPosition, new { @class = "form-control", @id = "ManagerPosition" })
                <span class="help-block with-errors"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-2 control-label" for="ManagerPositionDat">Должность руководителя (дательный падеж)</label>
            <div class="col-lg-5">
                @Html.TextBoxFor(m => m.ManagerPositionDat, new { @class = "form-control", @id = "ManagerPositionDat" })
                <span class="help-block with-errors"></span>
            </div>
        </div>*@
        <div class="form-group">
            <label class="col-lg-2 control-label">Статусы (изображения)</label>
            <div class="col-lg-10">
                @foreach (var image in Model.StateImages)
                {
                    var base64 = Convert.ToBase64String(image.Image);
                    var imgSrc = String.Format("data:image/gif;base64,{0}", base64);

                    <img class="org-state-preview" src="@imgSrc" />
                }
                <div>
                    <input type="file" name="file" multiple="multiple" />
                </div>
                <span class="help-block with-errors"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-push-2 col-lg-1">
                <button type="submit" class="btn btn-success"><i class="fa fa-save"></i>&nbsp;изменить</button>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-push-2 col-lg-push-2 col-lg-6">
                <span class="text-danger">@TempData["ServerError"]</span>
            </div>
        </div>
    }
}