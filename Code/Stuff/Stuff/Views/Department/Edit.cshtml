@using Stuff.Objects
@model Stuff.Models.Department
@{
    Layout = "~/Views/Shared/_Editor.cshtml";
}

@section PanelHead
{
    Крточка подразделения
}

@section PanelBody
{
    @using (Html.BeginForm("Edit", "Department", FormMethod.Post, new { @class = "form-horizontal", data_toggle = "validator", role = "form" }))
{
    @*<div class="form-group">
        <div class="col-lg-push-3 col-lg-10">
            @Html.ValidationSummary()
        </div>
    </div>*@
    <div class="form-group">
        <label class="col-lg-3 control-label" for="organization">Головное подразделение</label>
        <div class="col-lg-5">
            @Html.DropDownListFor(m => m.ParentDepartment.Id, DbList.GetDepartmentList(), "--отсутствует--", new { @class = "form-control required-mark", @id = "parent" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-lg-3 control-label" for="name">Наименование</label>
        <div class="col-lg-3">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control required-mark", @id = "name", required = "required", data_error = "Заполните поле Наименование" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-lg-3 control-label" for="chief">Руководитель</label>
        <div class="col-lg-5">
            @Html.DropDownListFor(m => m.Chief.Id, DbList.GetEmployeeList(), "--отсутствует--", new { @class = "form-control required-mark", @id = "chief" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-lg-push-3 col-lg-5">
            @*<a type="submit" class="btn btn-primary btn-sm" href="#"><i class="fa fa-save"></i>&nbsp;добавить</a>*@
            <button type="submit" class="btn btn-success"><i class="fa fa-save"></i>&nbsp;изменить</button>
        </div>
    </div>
}
}

@section scripts
{
    
}
