@section scripts
{

    <script type="text/javascript">
        $(document).ready(function () {
            $("#DateStart").datepicker({
                format: "dd.mm.yyyy",
                autoclose: true,
                todayBtn: "linked",
                language: "ru"
            });
            $("#DateStart").mask('00.00.0000');
            $("#DaysCount").mask('0');
        });

</script>
}